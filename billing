bill= int(raw_input())
 if( bill>5000):
      discount=(bill*50)/100
      topay=bill-discount
      print('Total bill is',bill)
      print('Discount on the bill amount is',discount)
      print('paid bill is',topay)
 elif(bill>3000):
      discount=(bill*30)/100
      topay=bill-discount
      print('Total bill is',bill)
      print('Discount on the bill amount is',discount)
      print('paid bill is',topay)
 elif(bill>2000):
      discount=(bill*20)/100
      topay=bill-discount
      print('Total bill is',bill)
      print('Discount on the bill amount is',discount)
      print('paid bill is',topay)
 elif(bill>=1000):
